{
  "name": "buzz-platform",
  "version": "1.0.0",
  "description": "Buzz platform monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "validate:ports": "node scripts/validate-ports.js",
    "predev": "npm run validate:ports",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:dev": "turbo run build --env-mode=development",
    "build:staging": "turbo run build --env-mode=staging",
    "build:prod": "turbo run build --env-mode=production",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:buzz": "playwright test tests/e2e/buzz --project=buzz-chrome",
    "test:e2e:buzz-biz": "playwright test tests/e2e/buzz-biz --project=buzz-biz-chrome",
    "test:e2e:buzz-admin": "playwright test tests/e2e/buzz-admin --project=buzz-admin-chrome",
    "test:e2e:mobile": "playwright test --project=buzz-mobile",
    "test:e2e:critical": "playwright test tests/e2e/critical --project=cross-browser-firefox",
    "test:e2e:security": "playwright test tests/e2e/security",
    "test:e2e:report": "playwright show-report",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.2",
    "playwright": "^1.55.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}